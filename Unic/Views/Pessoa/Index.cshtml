

        <div ng-app="Unic" ng-controller="PessoaController">
                <table class="table table-striped" ng-init="ListarPessoas()">
                    <thead style="align-items:center">
                        <tr>
                            <th scope="col" hidden>PessoaId</th>
                            <th scope="col" hidden>EnderecoId</th>
                            <th scope="col">Nome Completo</th>
                            <th scope="col">Cpf</th>
                            <th scope="col">Endereco</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="pe in Pessoas">
                            <td hidden>{{pe.id}}</td>
                            <td hidden>{{pe.enderecoId}}</td>
                            <td class="">{{pe.nomeCompleto}}</td>
                            <td>{{pe.cpf}}</td>
                            <td>
                                {{pe.endereco.logradouro}}, {{pe.endereco.numero}},
                                {{pe.endereco.cidade}}-{{pe.endereco.estado}}
                            </td>
                            <td>
                                <a class="btn btn-warning" data-toggle="modal" data-target="#adicionarPessoa" ng-click="SelecionarPessoa(pe.id)" style="color:linen">Editar</a>
                                <a class="btn btn-danger" ng-click="DeletarPessoa(pe.id)" style="color:linen">Deletar</a>
                            </td>
                        </tr>

                    </tbody>

                </table>
                <button type="submit" class="btn btn-info btn-lg" data-toggle="modal" data-target="#adicionarPessoa" ng-click="exibirSalvar()">
                    Adicionar <i class="fa-solid fa-trash-can-plus"></i>
                </button>

        <div class="modal fade" id="adicionarPessoa" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg">
                
                <div class="modal-content">
                    
                    <div class="modal-header">
                        <h4 class="modal-title">Adicionar Pessoa</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <form>
                            <div class="form-row">
                                <h2 class="form-text">Dados Pessoais</h2>
                                <input ng-model="pessoaId" hidden/>
                                <div class="form-group col-sm-12">
                                    <label for="NomeCompleto">Nome Completo</label>
                                    <input id="NomeCompleto" class="form-control" ng-model="nomeCompleto" />
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="Cpf">CPF</label>
                                    <input id="cpf" class="form-control" ng-model="cpf" onblur="return verificarCPF(this.value)" />
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="Data">Nascimento</label>
                                    <input id="data" type="date" class="form-control" ng-model="nascimento" />
                                </div>
                            </div>
                            <hr />
                            <h3 class="form-text">Endereco</h3>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="Cep">Cep</label>
                                    <div class="input-group">
                                        <input type="search" id="Cep" class="form-control" ng-model="cep" />
                                        <button type="button" class="btn btn-outline-success" ng-click="pesquisaCep(cep)">
                                            Pesquisar
                                        </button>
                                    </div>
                                </div>
                                <input ng-model="enderecoId" hidden/>
                                <div class="form-group col-sm-12">
                                    <label for="Endereco">Logradouro</label>
                                    <input id="Endereco" class="form-control" ng-model="logradouro" readonly />
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="Numero">Numero</label>
                                    <input id="Numero" class="form-control" ng-model="numero" />
                                </div>
                                <div class="form-group col-sm-8">
                                    <label for="Bairro">bairro</label>
                                    <input id="Bairro" class="form-control" ng-model="bairro" readonly/>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="Cidade">Cidade</label>
                                    <input id="Cidade" class="form-control" ng-model="cidade" readonly/>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="Estado">Estado</label>
                                    <input id="Estado" class="form-control" ng-model="estado" readonly/>
                                </div>

                            </div>
                            
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="botaoSalvar" class="btn btn-success" ng-click="AdicionarPessoa()" style="display:block">Salvar</button>
                        <button type="button" id="botaoEditar" class="btn btn-success" ng-click="EditarPessoa()" style="display:none">Editar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="LimparCampo()">Cancelar</button>
                    </div>
                </div>

            </div>
        </div>

    </div>


@section scripts
{
   @* @{await Html.RenderPartialAsync("_AngularScriptsPartial");}*@

    <script src="~/js/PessoaController.js"></script>
    <script src="~/js/site.js"></script>
}
